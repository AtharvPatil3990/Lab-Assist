<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/profile_header_shape"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Profile Picture"
                android:src="@drawable/profile_icon"
                app:tint="@color/icon"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atharv Patil"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/heading_text" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="atharv@example.com"
                android:textSize="14sp"
                android:textColor="@color/subtext"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="12dp"
                android:text="Edit Profile"
                android:visibility="gone"
                app:backgroundTint="@color/primary_btn_bg"
                android:textColor="@color/primary_btn_text"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/card" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body_text"
                    android:text="Institution Details"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Institute Name"
                    android:textSize="18sp"
                    android:textColor="@color/body_text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/tvInstituteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JSPM"
                    android:textColor="@color/subtext"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/borderAboveDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tvDepartmentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="18sp"
                    android:textColor="@color/body_text"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7077"
                    android:textColor="@color/subtext"
                    android:textSize="16sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/card"
            android:text="Settings"
            android:textColor="@color/body_text"
            android:layout_marginTop="15dp"
            android:elevation="6dp"
            app:strokeColor="@color/settings_button_border"
            app:strokeWidth="1dp"
            app:rippleColor="@color/bottom_nav_ripple"
            android:drawableStart="@drawable/settings_icon" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help and Support"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/tvHelpOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textColor="@color/body_text"
                    android:textSize="18sp"
                    android:drawablePadding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:drawableTint="@color/icon"
                    android:background="?attr/selectableItemBackground"
                    app:drawableStartCompat="@drawable/help_icon"
                    app:drawableEndCompat="@drawable/chevron_right_icon"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFAQ"
                    android:text="FAQ"
                    android:textColor="@color/body_text"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:padding="16dp"
                    android:focusable="true"
                    android:drawableTint="@color/icon"
                    app:drawableStartCompat="@drawable/faq_icon"
                    app:drawableEndCompat="@drawable/chevron_right_icon"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAbout"
                    android:text="About"
                    android:textColor="@color/body_text"
                    android:textSize="18sp"
                    app:drawableTint="@color/icon"
                    android:clickable="true"
                    android:padding="16dp"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    app:drawableStartCompat="@drawable/about_icon"
                    app:drawableEndCompat="@drawable/chevron_right_icon"
                    android:drawablePadding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/primary_btn_text"
            android:backgroundTint="@color/primary_btn_bg"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>