<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/card">

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvIssueTitle"
                android:text="PC not Starting"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/body_text" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvLabName"
                android:text="Lab 3 â€“ System 14"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_dark" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvDateRV"
                android:text="Reported: 26 Oct 2025"
                android:textSize="13sp"
                android:textColor="@color/text_secondary_dark" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvStatus"
                android:text="Status: Pending"
                android:textStyle="italic"
                android:textSize="13sp"
                android:textColor="@color/pending_status" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>