<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="8dp">

    <!-- Technician Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTechName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rahul Sharma"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/body_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNoteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Dec, 12:23 PM"
        android:textSize="12sp"
        android:textColor="@color/subtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTechName" />

    <!-- Note Content -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNoteContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Monitor was not working, replaced the HDMI cable."
        android:textSize="13sp"
        android:textColor="@color/subtext"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTechName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
